<div class="container">
	<%= render 'header' %>
	<% if @releases %>
	<% @releases.each do |release| %>
		<div class="panel">
			<div class="panel-heading">
				<h4>
					<%= image_tag release.icons.first.icon_data.url.to_s.sub('eficon', 'eficon1'), size: "72x72" %>
					<%= link_to "#{release.name} v#{release.version}", release %>
					<% release.icons.first.icon_data.url %>
					
					<small class="btn-sm"><%= release.created_at.strftime('%B %e, %Y %T') %></small>
				</h4>
				
				<div>
					<small class="btn-sm"><%= release.identifier %></small></div>
				</div>
			<div class="panel-body">
			<%	plist_url = manifest_url(release).sub('http', 'https') %>
			<%= link_to "Install App", "itms-services://?action=download-manifest&url=#{plist_url}", class: "btn btn-primary" %>
			</div>			
		</div>
	<% end %>
<% end %>
</div>



