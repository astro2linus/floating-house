<%= form_tag '/auth/identity/callback' do |f| %>
  <h3>Please log in</h3>
  <div class="input-group input-group-sm">
  	<%= label_tag :auth_key, "Email: " %>
  	<%= text_field_tag :auth_key %>
  </div>
  
  <div class="input-group input-group-sm">
  	<%= label_tag :password, "Password: " %>
  	<%= password_field_tag :password  %><br/>
  </div>
  
  <%= submit_tag "Login" %>
<% end %>


