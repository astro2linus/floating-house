<div class="container">
	<% if @user %>
		<ul>
			<li>Email: <%= @user.email %></li>
			<li>Name: <%= @user.name %></li>
			<li>Role(s): <%= @user.roles.map(&:name).join(" ") %></li>
			<% if current_user.has_role?(:admin) %>
      <li><%= link_to("Applications", "/oauth/applications") %></li>
      <% end %>
		</ul>
	<% end %>
</div>